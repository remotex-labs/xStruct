{
    "name": "@remotex-labs/xstruct",
    "main": "dist/cjs/index.js",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "./dist/esm/index.js",
    "author": "Garefild",
    "version": "v1.0.0-local",
    "license": "Mozilla Public License Version 2.0",
    "description": "This library provides a simple way to define and serialize data structures (structs) with support for both regular fields and bitfields",
    "homepage": "https://remotex-labs.github.io/xStruct",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/remotex-lab/xStruct.git"
    },
    "bugs": {
        "url": "https://github.com/remotex-lab/xStruct/issues"
    },
    "keywords": [
        "xStruct",
        "xstruct",
        "struct",
        "bit struct",
        "typescript",
        "formatter",
        "CLI",
        "javascript",
        "developer-tools"
    ],
    "engines": {
        "node": ">=20"
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "dev": "xBuild -w",
        "test": "jest",
        "build": "xBuild",
        "test:coverage": "jest --coverage",
        "lint": "xbuild --tc && eslint . -c ./eslint.config.mjs",
        "ci:test": "jest",
        "ci:clean": "rm -rf ./dist",
        "ci:build": "npm run build",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "devDependencies": {
        "jest": "^30.1.1",
        "eslint": "^9.39.3",
        "vitepress": "^1.6.4",
        "typescript-eslint": "^8.56.0",
        "eslint-plugin-tsdoc": "^0.5.0",
        "eslint-plugin-perfectionist": "^5.6.0",
        "vitepress-versioning-plugin": "^1.3.0",
        "@swc/jest": "^0.2.39",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.3.2",
        "@remotex-labs/xbuild": "^2.1.6"
    }
}
