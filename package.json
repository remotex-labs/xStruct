{
    "name": "@remotex-labs/xstruct",
    "main": "dist/cjs/index.js",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "./dist/esm/index.js",
    "author": "Garefild",
    "version": "v1.0.0-local",
    "license": "Mozilla Public License Version 2.0",
    "description": "This library provides a simple way to define and serialize data structures (structs) with support for both regular fields and bitfields",
    "homepage": "https://remotex-labs.github.io/xStruct",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/remotex-lab/xStruct.git"
    },
    "bugs": {
        "url": "https://github.com/remotex-lab/xStruct/issues"
    },
    "keywords": [
        "xStruct",
        "xstruct",
        "struct",
        "bit struct",
        "typescript",
        "formatter",
        "CLI",
        "javascript",
        "developer-tools"
    ],
    "engines": {
        "node": ">=20"
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "dev": "xBuild -w",
        "test": "xjet",
        "build": "xBuild",
        "test:coverage": "xjet --coverage",
        "lint": "pnpm run lint:md && pnpm run lint:eslint && pnpm run lint:typescript",
        "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --ignore \"node_modules/**\"",
        "lint:eslint": "eslint . -c ./eslint.config.mjs",
        "lint:typescript": "xbuild --tc",
        "ci:test": "xjet",
        "ci:clean": "rm -rf ./dist",
        "ci:build": "pnpm run build",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "devDependencies": {
        "eslint": "^9.39.3",
        "vitepress": "^1.6.4",
        "markdownlint-cli": "^0.47.0",
        "typescript-eslint": "^8.56.0",
        "eslint-plugin-tsdoc": "^0.5.0",
        "eslint-plugin-perfectionist": "^5.6.0",
        "vitepress-versioning-plugin": "^1.3.0",
        "@types/node": "^25.3.2",
        "@remotex-labs/xjet": "^1.5.4",
        "@remotex-labs/xbuild": "^2.1.6"
    }
}
